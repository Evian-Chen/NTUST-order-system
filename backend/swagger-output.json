{
  "swagger": "2.0",
  "info": {
    "title": "NTUST Order System API",
    "description": "API documentation for NTUST Order System",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Orders",
      "description": "Order management endpoints"
    },
    {
      "name": "Items",
      "description": "Item management endpoints"
    },
    {
      "name": "General",
      "description": "General API endpoints"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/": {
      "get": {
        "tags": [
          "General"
        ],
        "description": "API health check endpoint",
        "responses": {
          "200": {
            "description": "API is working properly"
          }
        }
      }
    },
    "/api/items": {
      "get": {
        "tags": [
          "Items"
        ],
        "description": "Get all items",
        "responses": {
          "200": {
            "description": "List of items",
            "schema": {
              "$ref": "#/definitions/Item"
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Items"
        ],
        "description": "Create a new item",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Item data",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CreateItemRequest"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Item created successfully",
            "schema": {
              "$ref": "#/definitions/Item"
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/orders": {
      "get": {
        "tags": [
          "Orders"
        ],
        "description": "Get all orders",
        "responses": {
          "200": {
            "description": "List of orders",
            "schema": {
              "$ref": "#/definitions/Order"
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Orders"
        ],
        "description": "Create a new order",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Order data",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CreateOrderRequest"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Order created successfully",
            "schema": {
              "$ref": "#/definitions/Order"
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/orders/{id}": {
      "get": {
        "tags": [
          "Orders"
        ],
        "description": "Get order by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Order ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Order details",
            "schema": {
              "$ref": "#/definitions/Order"
            }
          },
          "404": {
            "description": "Order not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "Order": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "example": "507f1f77bcf86cd799439011"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "item": {
                "type": "string",
                "example": "507f1f77bcf86cd799439012"
              },
              "quantity": {
                "type": "number",
                "example": 2
              }
            }
          }
        },
        "totalAmount": {
          "type": "number",
          "example": 100
        },
        "status": {
          "type": "string",
          "example": "pending"
        },
        "createdAt": {
          "type": "string",
          "example": "2023-01-01T00:00:00.000Z"
        },
        "updatedAt": {
          "type": "string",
          "example": "2023-01-01T00:00:00.000Z"
        }
      }
    },
    "Item": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "example": "507f1f77bcf86cd799439012"
        },
        "name": {
          "type": "string",
          "example": "Coffee"
        },
        "price": {
          "type": "number",
          "example": 50
        },
        "description": {
          "type": "string",
          "example": "Fresh brewed coffee"
        },
        "category": {
          "type": "string",
          "example": "beverages"
        },
        "available": {
          "type": "boolean",
          "example": true
        },
        "createdAt": {
          "type": "string",
          "example": "2023-01-01T00:00:00.000Z"
        },
        "updatedAt": {
          "type": "string",
          "example": "2023-01-01T00:00:00.000Z"
        }
      }
    },
    "CreateOrderRequest": {
      "type": "object",
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "item": {
                "type": "string",
                "example": "507f1f77bcf86cd799439012"
              },
              "quantity": {
                "type": "number",
                "example": 2
              }
            }
          }
        }
      }
    },
    "CreateItemRequest": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Coffee"
        },
        "price": {
          "type": "number",
          "example": 50
        },
        "description": {
          "type": "string",
          "example": "Fresh brewed coffee"
        },
        "category": {
          "type": "string",
          "example": "beverages"
        },
        "available": {
          "type": "boolean",
          "example": true
        }
      }
    }
  }
}